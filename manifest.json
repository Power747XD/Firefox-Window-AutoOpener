{
    "manifest_version":2,
    "name":"Automatic Window Opener",
    "author":"Davide Scalise",
    "version":"0.2",

    "background":{
        "scripts":["defaultValues.js","windowManager.js","backgroundScript.js"]
    },
    "browser_action":{
        "default_popup":"guiOpener.html"
    },
    "permissions":["storage","tabs"],
    "commands":{
        "reload-windows-keyboard":{
            "suggested_key":{
                "default":"Ctrl+Alt+U"
            }   },
        "save-windows-keyboard":{
            "suggested_key":{
                "default":"Ctrl+Alt+I"
            }   },
        "convert-windows-keyboard":{
            "suggested_key":{
                "default":"Ctrl+Alt+O"
            }   }
        }
        }
